<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4DCB8"
    android:padding="20dp"
    tools:context=".jadwalfasilitator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/wheel">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Jadwal Fasilitator"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25dp">
        </TextView>

        <Button
            android:id="@+id/jadwaljanuari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Januari"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalfebruari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Februari"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalmaret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maret"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalapril"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="April"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalmei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mei"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwaljuni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juni"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwaljuli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juli"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalagustus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agustus"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalseptember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="September"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwaloktober"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oktober"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwalnovember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="November"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/jadwaldesember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desember"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>

</ScrollView>