<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4DCB8"
    android:padding="20dp"
    tools:context=".murid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/wheel">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Murid"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25dp">
        </TextView>

        <Button
            android:id="@+id/cagga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cagga"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/saddha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saddha"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/viriya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viriya"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/satthi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satthi"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/samadhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Samadhi"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/panna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panna"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/nilaimurid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Murid"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/datamurid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Murid"
            android:layout_marginTop="10dp"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>

</ScrollView>